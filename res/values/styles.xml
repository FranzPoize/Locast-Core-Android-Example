<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Image">
        <item name="android:background">@android:drawable/picture_frame</item>
        <item name="android:layout_margin">@dimen/padding_medium</item>
    </style>

    <!-- generic styles for casts -->
    <style name="Cast" />

    <style name="Cast.Thumbnail" parent="Image">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:cropToPadding">true</item>
        <item name="android:src">@drawable/ic_placeholder</item>
    </style>

    <style name="Cast.Title">
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Cast.Author"></style>

    <style name="Cast.Description">
        <item name="android:padding">10dip</item>
    </style>

    <style name="Cast.Item"></style>

    <style name="Cast.Media"></style>

    <style name="Cast.Media.Thumbnail">
        <item name="android:cropToPadding">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="Cast.Media.Empty">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Cast.Media.Item">
        <item name="android:background">@android:drawable/picture_frame</item>
    </style>

    <style name="Cast.Media.List">
        <item name="android:spacing">5dp</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
    </style>

    <style name="Cast.Media.Title"></style>

    <!-- styles specific to ListItems -->
    <style name="Cast.Thumbnail.ListItem"></style>

    <style name="Cast.Title.ListItem"></style>

    <style name="Cast.Author.ListItem"></style>

    <style name="Cast.Description.ListItem"></style>

    <!-- styles specific to the detail view -->

    <style name="Cast.Detail"></style>

    <style name="Cast.Item.Detail"></style>

    <style name="Cast.Description.Detail"></style>

    <style name="Cast.Media.Detail"></style>

    <style name="Cast.Media.Thumbnail.Detail"></style>

    <style name="Cast.Media.Title.Detail">
        <item name="android:padding">10sp</item>
        <item name="android:background">#40ffffff</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="Cast.Media.Item.Detail"></style>

    <style name="Cast.Media.List.Detail"></style>

    <style name="Cast.Media.Empty.Detail"></style>

    <!-- Locatable item map view -->
    <style name="Locatable"></style>

    <style name="Locatable.Map"></style>

    <style name="Locatable.Map.Frame">
        <item name="android:foreground">@drawable/map_overshadow_pointer</item>
    </style>
    
    <style name="LocationLink">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/location_link_text</item>
        <item name="android:drawableLeft">@drawable/ic_location</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">@dimen/padding_medium</item>
    </style>

</resources>