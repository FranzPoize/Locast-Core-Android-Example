<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Image">
        <item name="android:background">@android:drawable/picture_frame</item>
        <item name="android:layout_margin">@dimen/padding_medium</item>
    </style>

    <!-- generic styles for casts -->
    <style name="Cast" />

    <style name="Cast.Thumbnail" parent="Image">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:contentDescription">@null</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:cropToPadding">true</item>
        <item name="android:src">@drawable/ic_placeholder</item>
    </style>

    <style name="Cast.Title">
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Cast.Author"></style>
    <style name="Cast.Description"></style>
    
    <!-- styles specific to ListItems -->
    <style name="Cast.Thumbnail.ListItem"></style>

    <style name="Cast.Title.ListItem"></style>

    <style name="Cast.Author.ListItem"></style>
    
    <style name="Cast.Description.ListItem"></style>

</resources>